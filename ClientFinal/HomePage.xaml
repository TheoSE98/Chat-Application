<Page x:Class="ClientFinal.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientFinal"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome, " FontSize="20" FontWeight="Bold" Margin="0,0,10,0" />
            <TextBlock x:Name="usernameTextBlock" Text="" FontSize="20" FontWeight="Bold"/>

            <!-- Add a list of available chat rooms -->
            <ListView x:Name="chatRoomListView" Width="300" Height="200" Margin="0,20,0,20">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Chat Room" Width="200" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Is Public" Width="100" DisplayMemberBinding="{Binding IsPublic}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Add a button to join a selected chat room -->
            <Button Content="Join Chat Room" Click="JoinChatRoom_Click" Width="120" Height="36"/>
        </StackPanel>
    </Grid>
</Page>
